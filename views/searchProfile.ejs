<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="shortcut icon" href="assets/images/logo5.png" type="image/x-icon">
    <title>User Profile</title>
    <link rel="stylesheet" href="styleDProfile1.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
</head>

<body>

    <div class="profile-container">
        <div class="profile-header">
            <img class="main-i" src="<%= user.userPhoto %>" alt="Profile Picture">
            <div class="profile-info">
                <h1 id="usrname">
                    <%= user.username %>
                </h1>
                <div class="usertype">
                    <p>
                        <%= user.accountType %>
                    </p>
                </div>
                <div class="counts" style="width: 90%;">
                    <table>
                        <tr>
                            <th class="Followers" id="data">Followers: <%= user.followersCount %>
                            </th>
                            <th class="Following" id="data">Following: <%= user.followingCount %>
                            </th>
                            <th class="Post" id="data">Post: <%= user.postCount %>
                            </th>
                        </tr>
                    </table>
                </div>
            </div>
        </div>

        <div class="multiline-text">
            <label id="ach"><b>Achievement bio:</b>
                <%= user.bio %>
            </label><br><br><br>
            <label id="req"><b>Requirements:</b>
                <%= user.requirements %>
            </label><br><br>
        </div>
        <div class="opt-r">
            <a class="prev" href="/follow/sendRequest/<%= user._id %>"> <button>Follow</button></a>
            <a href="/chat/personal/<%= user._id %>"><button>Message</button></a>
            <a class="prev" href="/search"><button>Go Back</button></a>
        </div>
        <h2># POST GRID</h2>
        <div class="posts">
            <% userPosts.forEach(post=> { %>
                <div class="profile-container1">
                    <div class="profile-i">
                        <img class="img-i" src="<%= user.userPhoto %>" alt="<%= user.username %>">
                        <div class="username">
                            <%= user.username %>
                        </div>
                    </div>
                    <div class="post">
                        <div class="post-media">
                            <% if (post.Content_Type === 'image') { %>
                                <img class="post-img" src="<%= post.Content_URL %>" alt="<%= user.username %>'s Post">
                            <% } else if (post.Content_Type === 'video') { %>
                                <video class="post-video" controls>
                                    <source src="<%= post.Content_URL %>" type="video/mp4">
                                    Your browser does not support the video tag.
                                </video>
                            <% } %>
                        </div>
                        <div class="post-actions">
                            <a href="/like/<%= post._id %>/<%= user._id %>" id="like-btn">
                                <i class="fas fa-heart">
                                    <%= post.Like_Count %>
                                </i>
                            </a>
                            <a href="#" onclick="postComment('<%= post._id %>')" id="cmt-btn">
                                <i class="fas fa-comment">
                                    <%= post.Comment_Count %>
                                </i>
                            </a>
                        </div>
                    </div>
                </div>
            <% }); %>
        </div>
    </div>

    <script src="index.js"></script>

</body>

</html>
