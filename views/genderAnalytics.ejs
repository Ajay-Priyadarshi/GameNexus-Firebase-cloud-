<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="shortcut icon" href="assets/images/logo5.png" type="image/x-icon">
    <title>Age Analytics</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <style>
             body{
            background-color: #1b1b1b;
            font-family: 'League';
            color: white;
  
        }
        .card-title {
            font-size: 2vh;
            
        }
        .container{
        background-color: #1b1b1b;
        }

        .card{
            background-color: #3a3a3a;
            border: #156aea;
            border-style: outset;
            border-radius: 10px;
        }

        .card:hover{
            border: #22ff00;
            border-style: outset;
            border-radius: 10px;
        }

        .list-group{
            border: #156aea;
            border-style: outset;
            border-radius: 10px;
        }

.list-group:hover{
    border: #22ff00;
            border-style: outset;
            border-radius: 10px;
}

        h2{
            color:white;
        }

        .card-title{
            color: white;
        }

        #pie-chart{
            color: white;
        }
    </style>
</head>

<body >

    <div class="container my-5">
        <div class="row">
            <div class="col-lg-6 mx-auto">
                <div class="card">
                    <div class="card-body text-center">
                        <h2>Gender analytics</h2>
                        <canvas id="pieChart"></canvas>
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="card">
                    <div class="card-body">
                        <p class="card-title">&#9776;User Info</p>
                        <ul id="userList" class="list-group">
                            <% let totalUsers = 0; %>
                            <% for (const accountType in analyticsData) { %>
                                <li class="list-group-item">
                                    <%= accountType %>: <%= analyticsData[accountType] %>
                                </li>
                                <% totalUsers += analyticsData[accountType]; %>
                            <% } %>
                            <li class="list-group-item">
                                Total Users: <%= totalUsers %>
                            </li>
                        </ul>
                        
                        <a href="/pdf/genderAnalytics?data=<%= encodeURIComponent(JSON.stringify(analyticsData)) %>" class="btn btn-primary mt-3">PDF</a><br>
                        <a href="/userAnalytics/genderRatio" class="btn btn-primary mt-3">Gender Ratio</a>
                        <a href="/userAnalytics/ageRatio" class="btn btn-primary mt-3">Age Ratio</a>
                        
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <!-- useranalytics.ejs -->
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const analyticsData = <%- JSON.stringify(analyticsData) %>;
            console.log(analyticsData);

            const pieChartCanvas = document.getElementById('pieChart').getContext('2d');
            new Chart(pieChartCanvas, {
                type: 'doughnut',
                data: {
                    labels: Object.keys(analyticsData).map(label => label.toLowerCase()),
                    datasets: [{
                        data: Object.values(analyticsData),
                        backgroundColor: ['#2ecc71', '#e74c3c', '#3498db', '#f1c40f', '#9b59b6', '#34495e', '#95a5a6', '#e67e22', '#d35400', '#c0392b', '#7f8c8d']
                    }]
                }
            });
        });
    </script>

</body>

</html>
